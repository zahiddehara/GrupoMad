@model GrupoMad.Controllers.ProductCreateViewModel

@{
    ViewData["Title"] = "Crear Producto";
}

<h1>Crear Producto</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="SKU" class="control-label">SKU</label>
                <input asp-for="SKU" class="form-control" />
                <span asp-validation-for="SKU" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Descripción</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductType" class="control-label">Tipo de Producto</label>
                <select asp-for="ProductType" class="form-control" asp-items="ViewBag.ProductTypes">
                    <option value="">-- Seleccione un tipo --</option>
                </select>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PricingType" class="control-label">Tipo de Precio</label>
                <select asp-for="PricingType" class="form-control" asp-items="ViewBag.PricingTypes">
                    <option value="">-- Seleccione un tipo --</option>
                </select>
                <span asp-validation-for="PricingType" class="text-danger"></span>
                <small class="form-text text-muted">
                    PerSquareMeter: Por metro cuadrado | PerUnit: Por unidad | PerLinearMeter: Por metro lineal
                </small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StoreId" class="control-label">Tienda</label>
                <select asp-for="StoreId" class="form-control" asp-items="ViewBag.StoreId">
                    <option value="">-- Global (Todas las tiendas) --</option>
                </select>
                <span asp-validation-for="StoreId" class="text-danger"></span>
                <small class="form-text text-muted">Deje vacío para que el producto esté disponible en todas las tiendas</small>
            </div>

            <div class="form-group form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                <label asp-for="IsActive" class="form-check-label">Activo</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
