@model GrupoMad.Models.Product

@{
    ViewData["Title"] = "Gestionar Colores";
}

<h1>Gestionar Colores - @Model.Name</h1>
<h5 class="text-muted">SKU Producto: @Model.SKU</h5>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<hr />

<div class="row">
    <!-- Colores asignados -->
    <div class="col-md-7">
        <h3>Colores Asignados</h3>

        @if (Model.ProductColors != null && Model.ProductColors.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Color</th>
                            <th>SKU Variante</th>
                            <th>Fecha Creación</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pc in Model.ProductColors)
                        {
                            <tr>
                                <td>
                                    <form asp-action="UpdateColor" method="post" class="d-inline-flex gap-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@Model.Id" />
                                        <input type="hidden" name="productColorId" value="@pc.Id" />
                                        <input type="text" name="colorName" value="@pc.Name" class="form-control form-control-sm" style="width: 150px;" required />
                                        <button type="submit" class="btn btn-sm btn-primary btn-sm" title="Actualizar nombre">
                                            <i class="bi bi-check"></i>
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <form asp-action="UpdateColor" method="post" class="d-inline-flex gap-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@Model.Id" />
                                        <input type="hidden" name="productColorId" value="@pc.Id" />
                                        <input type="text" name="sku" value="@pc.SKU" class="form-control form-control-sm" style="width: 200px;" required />
                                        <button type="submit" class="btn btn-sm btn-primary" title="Actualizar SKU">
                                            <i class="bi bi-check"></i>
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <small class="text-muted">@pc.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    <form asp-action="RemoveColor" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@Model.Id" />
                                        <input type="hidden" name="productColorId" value="@pc.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar este color?');">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No hay colores asignados a este producto.
            </div>
        }
    </div>

    <!-- Agregar nuevo color -->
    <div class="col-md-5">
        <h3>Agregar Color</h3>

        <div class="card">
            <div class="card-body">
                <form asp-action="AddColor" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@Model.Id" />

                    <div class="mb-3">
                        <label for="colorName" class="form-label">Nombre del Color</label>
                        <input type="text" name="colorName" id="colorName" class="form-control" required
                               placeholder="Ej: Rojo, Azul, Negro..." />
                        <small class="form-text text-muted">
                            Ingrese el nombre del color para este producto
                        </small>
                    </div>

                    <div class="mb-3">
                        <label for="sku" class="form-label">SKU de la Variante</label>
                        <input type="text" name="sku" id="sku" class="form-control" required
                               placeholder="Ej: @(Model.SKU)-ROJO" />
                        <small class="form-text text-muted">
                            Ingrese un SKU único para esta combinación producto-color
                        </small>
                    </div>

                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Agregar Color
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<hr />
<div>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">Ver Detalles</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
