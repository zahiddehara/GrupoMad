@using GrupoMad.Models.ViewComponents
@model DataTableConfig<GrupoMad.Models.Product>

@{
    ViewData["Title"] = "Productos";
}

<link rel="stylesheet" href="~/css/custom-datatable.css" />

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1>Productos</h1>
                    <p class="text-muted">Administra los productos de tu empresa</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Crear Nuevo Producto
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @await Component.InvokeAsync("DataTable", Model)
        </div>
    </div>
</div>

<style>
    h1 {
        font-family: 'Acid Grotesk', 'Geist', sans-serif;
        font-weight: 400;
        font-size: 26px;
        margin-bottom: 8px;
    }
</style>
