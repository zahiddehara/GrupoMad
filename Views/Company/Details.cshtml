@model GrupoMad.Models.Company

@{
    ViewData["Title"] = "Detalles de Empresa";
}

<h1>Detalles de Empresa</h1>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>@Model.Name</h3>
        @if (!string.IsNullOrEmpty(Model.LogoPath))
        {
            <img src="@Model.LogoPath" alt="Logo de @Model.Name" style="max-height: 60px;" class="img-thumbnail" />
        }
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">RFC</dt>
                    <dd class="col-sm-8">@(Model.RFC ?? "No especificado")</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@(Model.Email ?? "No especificado")</dd>
                </dl>
            </div>
        </div>

        <hr />
        <h4>Dirección</h4>

        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">Calle</dt>
                    <dd class="col-sm-10">@(Model.Street ?? "No especificado")</dd>

                    <dt class="col-sm-2">No. Exterior</dt>
                    <dd class="col-sm-4">@(Model.ExteriorNumber ?? "No especificado")</dd>

                    <dt class="col-sm-2">No. Interior</dt>
                    <dd class="col-sm-4">@(Model.InteriorNumber ?? "No especificado")</dd>

                    <dt class="col-sm-2">Colonia</dt>
                    <dd class="col-sm-10">@(Model.Neighborhood ?? "No especificado")</dd>

                    <dt class="col-sm-2">Ciudad</dt>
                    <dd class="col-sm-4">@(Model.City ?? "No especificado")</dd>

                    <dt class="col-sm-2">Estado</dt>
                    <dd class="col-sm-4">@(Model.StateID.HasValue ? Model.StateID.ToString() : "No especificado")</dd>

                    <dt class="col-sm-2">Código Postal</dt>
                    <dd class="col-sm-10">@(Model.PostalCode ?? "No especificado")</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    </div>
</div>
