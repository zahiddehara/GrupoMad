@model List<GrupoMad.Models.Company>

@{
    ViewData["Title"] = "Empresas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Empresas</h1>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>RFC</th>
            <th>Ciudad</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var company in Model)
        {
            <tr>
                <td>@company.Name</td>
                <td>@company.RFC</td>
                <td>@company.City</td>
                <td>@company.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@company.Id" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@company.Id" class="btn btn-sm btn-warning">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
