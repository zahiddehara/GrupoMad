@model GrupoMad.Models.PriceList

@{
    ViewData["Title"] = "Gestionar Productos";
}

<h1>Gestionar Productos - @Model.Name</h1>

@if (Model.Store != null)
{
    <h5 class="text-muted">Tienda: @Model.Store.Name</h5>
}
else
{
    <h5 class="text-muted">Lista Global</h5>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Info"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Info"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@* Mostrar informaci√≥n si la lista est√° vinculada a un ProductType *@
@if (Model.ProductTypeId.HasValue && Model.ProductType != null)
{
    <div class="alert alert-info">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-link-45deg"></i>
                <strong>Lista vinculada al tipo de producto:</strong> @Model.ProductType.Name
                <br />
                <small class="text-muted">
                    ‚Ä¢ Productos nuevos de tipo "@Model.ProductType.Name" se agregan autom√°ticamente<br />
                    ‚Ä¢ Usa "Sincronizar" para agregar productos faltantes y <strong>remover productos que ya no pertenecen</strong> a este tipo
                </small>
            </div>
            <form asp-action="SyncProducts" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="priceListId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary" title="Sincroniza la lista: agrega productos nuevos y remueve productos que cambiaron de tipo">
                    <i class="bi bi-arrow-repeat"></i> Sincronizar Ahora
                </button>
            </form>
        </div>
    </div>
}

@* Mostrar opci√≥n de porcentaje para listas de tienda (no globales) *@
@if (Model.StoreId.HasValue && Model.ProductTypeId.HasValue)
{
    <div class="card mb-3">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">
                <i class="bi bi-percent"></i> Ajustar Precios desde Lista Global
            </h5>
        </div>
        <div class="card-body">
            <p class="text-muted">
                Los precios de esta lista se basan en la lista global "<strong>Lista de @Model.ProductType?.Name</strong>".
                Aplica un porcentaje para ajustar todos los precios autom√°ticamente.
            </p>
            <form asp-action="ApplyPercentageFromGlobal" method="post" class="row g-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="priceListId" value="@Model.Id" />

                <div class="col-auto">
                    <label for="percentage" class="form-label">Porcentaje de Ajuste</label>
                    <div class="input-group">
                        <input type="number"
                               class="form-control"
                               id="percentage"
                               name="percentage"
                               step="0.01"
                               placeholder="Ej: 15 o -10"
                               required
                               style="width: 120px;" />
                        <span class="input-group-text">%</span>
                    </div>
                    <small class="form-text text-muted">
                        Positivo para aumentar, negativo para reducir
                    </small>
                </div>

                <div class="col-auto d-flex align-items-end">
                    <button type="submit" class="btn btn-warning" onclick="return confirm('¬øEst√° seguro de aplicar este porcentaje a TODOS los productos de la lista?');">
                        <i class="bi bi-calculator"></i> Aplicar Porcentaje
                    </button>
                </div>
            </form>
        </div>
    </div>
}

<hr />

<div>
    <h3>Productos en la Lista</h3>

    @if (Model.PriceListItems != null && Model.PriceListItems.Any())
    {
        @if (Model.ProductType?.HasVariants == true && Model.ProductType.ProductTypeVariants.Any())
        {
            var productsGrouped = Model.PriceListItems
                .GroupBy(pli => pli.ProductId)
                .Select(g => new {
                    ProductId = g.Key,
                    Product = g.First().Product,
                    Items = g.OrderBy(i => Model.ProductType.ProductTypeVariants.FirstOrDefault(v => v.Id == i.ProductTypeVariantId)?.DisplayOrder ?? 999).ToList()
                })
                .OrderBy(g => g.Product.Name)
                .ToList();

            <form asp-action="SaveAllVariantPrices" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="priceListId" value="@Model.Id" />

                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>SKU</th>
                                <th>Producto</th>
                                @foreach (var variant in Model.ProductType.ProductTypeVariants.Where(v => v.IsActive).OrderBy(v => v.DisplayOrder))
                                {
                                    <th class="text-center">@variant.Name</th>
                                }
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var productGroup in productsGrouped)
                            {
                                <tr>
                                    <td><code>@productGroup.Product.SKU</code></td>
                                    <td><strong>@productGroup.Product.Name</strong></td>
                                    @foreach (var variant in Model.ProductType.ProductTypeVariants.Where(v => v.IsActive).OrderBy(v => v.DisplayOrder))
                                    {
                                        var variantItem = productGroup.Items.FirstOrDefault(i => i.ProductTypeVariantId == variant.Id);
                                        <td class="text-center">
                                            @if (variantItem != null)
                                            {
                                                @if (Model.StoreId.HasValue)
                                                {
                                                    <input type="number" value="@variantItem.Price" class="form-control form-control-sm text-center" readonly disabled title="Use el ajuste de porcentaje arriba" style="width: 100px; display: inline-block;" />
                                                }
                                                else
                                                {
                                                    <input type="hidden" name="itemIds[]" value="@variantItem.Id" />
                                                    <div class="input-group input-group-sm" style="width: 120px; margin: 0 auto;">
                                                        <span class="input-group-text">$</span>
                                                        <input type="number" name="prices[@variantItem.Id]" value="@variantItem.Price" class="form-control form-control-sm text-center" step="0.01" min="0" required />
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    }
                                    <td class="text-center">
                                        @{
                                            var firstItem = productGroup.Items.FirstOrDefault();
                                        }
                                        @if (firstItem != null)
                                        {
                                            <a asp-action="ManageDiscounts" asp-route-itemId="@firstItem.Id" class="btn btn-sm btn-light" title="Gestionar Descuentos">
                                                <i class="bi bi-percent"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!Model.StoreId.HasValue)
                {
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar Todos los Precios
                        </button>
                    </div>
                }
            </form>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>SKU</th>
                            <th>Producto</th>
                            <th>Tipo</th>
                            <th>Precio Base</th>
                            <th>Variante</th>
                            <th>Precio Final</th>
                            <th>Descuentos Activos</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PriceListItems.OrderBy(p => p.Product.Name))
                        {
                        <tr>
                            <td><code>@item.Product.SKU</code></td>
                            <td><strong>@item.Product.Name</strong></td>
                            <td>
                                @if (item.Product.ProductType != null)
                                {
                                    @switch (item.Product.ProductType.PricingType)
                                    {
                                        case GrupoMad.Models.PricingType.PerSquareMeter:
                                            <span class="badge bg-info">m¬≤</span>
                                            break;
                                        case GrupoMad.Models.PricingType.PerUnit:
                                            <span class="badge bg-success">Unidad</span>
                                            break;
                                        case GrupoMad.Models.PricingType.PerLinearMeter:
                                            <span class="badge bg-warning">Metro</span>
                                            break;
                                        case GrupoMad.Models.PricingType.PerRangeLength:
                                            <span class="badge bg-secondary">Rango Largo</span>
                                            break;
                                        case GrupoMad.Models.PricingType.PerRangeDimensions:
                                            <span class="badge bg-secondary">Rango Dim</span>
                                            break;
                                    }
                                }
                            </td>
                            <td>
                                @* No mostrar precio base para productos con precios por rangos *@
                                @if (item.Product?.ProductType?.PricingType == GrupoMad.Models.PricingType.PerRangeLength ||
                                     item.Product?.ProductType?.PricingType == GrupoMad.Models.PricingType.PerRangeDimensions)
                                {
                                    <span class="text-muted">
                                        <i class="bi bi-dash-circle"></i> Definir rangos
                                    </span>
                                }
                                else if (Model.StoreId.HasValue)
                                {
                                    @* Para listas de tienda: mostrar precio pero no permitir edici√≥n directa *@
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <span class="input-group-text">$</span>
                                        <input type="number" value="@item.Price"
                                               class="form-control form-control-sm" step="0.01" min="0" readonly disabled
                                               title="Use el ajuste de porcentaje arriba para modificar los precios" />
                                    </div>
                                    <small class="text-muted">Desde lista global</small>
                                }
                                else
                                {
                                    @* Para listas globales: permitir edici√≥n directa *@
                                    <form asp-action="UpdateItem" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="itemId" value="@item.Id" />
                                        <input type="hidden" name="priceListId" value="@Model.Id" />
                                        <input type="hidden" name="variantId" value="@item.ProductTypeVariantId" />
                                        <div class="input-group input-group-sm" style="width: 150px;">
                                            <span class="input-group-text">$</span>
                                            <input type="number" name="price" value="@item.Price"
                                                   class="form-control form-control-sm" step="0.01" min="0" required />
                                            <button type="submit" class="btn btn-primary btn-sm">üíæ</button>
                                        </div>
                                    </form>
                                }
                            </td>
                            <td>
                                @* No mostrar variante para productos con precios por rangos *@
                                @if (item.Product?.ProductType?.PricingType == GrupoMad.Models.PricingType.PerRangeLength ||
                                     item.Product?.ProductType?.PricingType == GrupoMad.Models.PricingType.PerRangeDimensions)
                                {
                                    <span class="text-muted">-</span>
                                }
                                else
                                {
                                    @* Mostrar el nombre de la variante si existe *@
                                    @if (item.ProductTypeVariant != null)
                                    {
                                        <span class="badge bg-secondary">@item.ProductTypeVariant.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                }
                            </td>
                            <td>
                                @* Para productos por rangos no aplica precio final *@
                                @if (item.Product?.ProductType?.PricingType == GrupoMad.Models.PricingType.PerRangeLength ||
                                     item.Product?.ProductType?.PricingType == GrupoMad.Models.PricingType.PerRangeDimensions)
                                {
                                    <span class="text-muted">Ver rangos</span>
                                }
                                else
                                {
                                    var finalPrice = item.GetFinalPrice();
                                    <strong class="text-primary">$@finalPrice.ToString("N2")</strong>
                                }
                            </td>
                            <td>
                                @* Para productos por rangos no aplica descuentos *@
                                @if (item.Product?.ProductType?.PricingType == GrupoMad.Models.PricingType.PerRangeLength ||
                                     item.Product?.ProductType?.PricingType == GrupoMad.Models.PricingType.PerRangeDimensions)
                                {
                                    <span class="text-muted">-</span>
                                }
                                else
                                {
                                    var activeDiscount = item.GetActiveDiscount();
                                    var discountApplied = item.GetDiscountApplied();

                                    if (activeDiscount != null && discountApplied > 0)
                                    {
                                        <span class="badge bg-success" title="Descuento vigente hasta @activeDiscount.ValidUntil.ToString("dd/MM/yyyy")">
                                            -$@discountApplied.ToString("N2")
                                            <small>(P@(activeDiscount.Priority))</small>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                }
                            </td>
                            <td>
                                @* Bot√≥n de rangos para productos con tipo PerRangeLength o PerRangeDimensions *@
                                @if (item.Product?.ProductType?.PricingType == GrupoMad.Models.PricingType.PerRangeLength)
                                {
                                    <a asp-action="ManageRangesByLength" asp-route-itemId="@item.Id" class="btn btn-sm btn-info" title="Gestionar Rangos por Largo">
                                        <i class="bi bi-rulers"></i> Rangos
                                    </a>
                                }
                                else if (item.Product?.ProductType?.PricingType == GrupoMad.Models.PricingType.PerRangeDimensions)
                                {
                                    <a asp-action="ManageRangesByDimensions" asp-route-itemId="@item.Id" class="btn btn-sm btn-info" title="Gestionar Rangos por Dimensiones">
                                        <i class="bi bi-bounding-box"></i> Rangos
                                    </a>
                                }
                                else
                                {
                                    @* Bot√≥n de descuentos solo para productos que no son por rangos *@
                                    <a asp-action="ManageDiscounts" asp-route-itemId="@item.Id" class="btn btn-sm btn-light" title="Gestionar Descuentos">
                                        <i class="bi bi-percent"></i> Descuentos
                                    </a>
                                }

                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            No hay productos en esta lista.
        </div>
    }
</div>

<hr />
<div>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">Ver Detalles</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
