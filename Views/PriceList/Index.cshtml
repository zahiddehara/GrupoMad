@model IEnumerable<GrupoMad.Models.PriceList>

@{
    ViewData["Title"] = "Listas de Precios";
}

<h1>Listas de Precios</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Info"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Info"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear Nueva Lista de Precios
    </a>
    <a asp-action="CreateByProductTypes" class="btn btn-success">
        <i class="bi bi-grid-3x3-gap"></i> Crear por Tipos de Producto (Global)
    </a>
    <a asp-action="CreateByProductTypesForStores" class="btn btn-success">
        <i class="bi bi-shop"></i> Crear por Tipos y Tiendas
    </a>

    @if (ViewBag.IncludeInactive)
    {
        <a asp-action="Index" asp-route-includeInactive="false" class="btn btn-secondary">
            <i class="bi bi-eye-slash"></i> Ocultar Inactivas
        </a>
    }
    else
    {
        <a asp-action="Index" asp-route-includeInactive="true" class="btn btn-secondary">
            <i class="bi bi-eye"></i> Mostrar Inactivas
        </a>
    }
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-8">
                <label for="productTypeSearch" class="form-label">
                    <i class="bi bi-search"></i> Buscar por Tipo de Producto
                </label>
                <input type="text"
                       name="productTypeSearch"
                       id="productTypeSearch"
                       class="form-control"
                       placeholder="Escribe el nombre del tipo de producto..."
                       value="@ViewBag.ProductTypeSearch">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Buscar
                </button>
                <a asp-action="Index" asp-route-includeInactive="@ViewBag.IncludeInactive" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Limpiar
                </a>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="onlyGlobal"
                           id="onlyGlobal"
                           value="true"
                           @(ViewBag.OnlyGlobal ? "checked" : "")>
                    <label class="form-check-label" for="onlyGlobal">
                        <i class="bi bi-globe"></i> Solo mostrar listas globales
                    </label>
                </div>
            </div>
            <input type="hidden" name="includeInactive" value="@ViewBag.IncludeInactive" />
        </form>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(ViewBag.ProductTypeSearch) || ViewBag.OnlyGlobal)
{
    <div class="mb-3">
        <span class="text-muted me-2">Filtrando por:</span>

        @if (!string.IsNullOrWhiteSpace(ViewBag.ProductTypeSearch))
        {
            <span class="badge bg-primary fs-6 me-2">
                <i class="bi bi-tag"></i> @ViewBag.ProductTypeSearch
                <a asp-action="Index"
                   asp-route-includeInactive="@ViewBag.IncludeInactive"
                   asp-route-onlyGlobal="@ViewBag.OnlyGlobal"
                   class="text-white text-decoration-none ms-2">
                    <i class="bi bi-x-circle"></i>
                </a>
            </span>
        }

        @if (ViewBag.OnlyGlobal)
        {
            <span class="badge bg-info fs-6">
                <i class="bi bi-globe"></i> Solo Globales
                <a asp-action="Index"
                   asp-route-includeInactive="@ViewBag.IncludeInactive"
                   asp-route-productTypeSearch="@ViewBag.ProductTypeSearch"
                   class="text-white text-decoration-none ms-2">
                    <i class="bi bi-x-circle"></i>
                </a>
            </span>
        }
    </div>
}

<div class="mb-3">
    <span class="badge bg-secondary fs-6">
        <i class="bi bi-list-ul"></i> Mostrando @Model.Count() lista(s) de precios
    </span>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo de Producto</th>
            <th>Tienda</th>
            <th>Items</th>
            <th>Estado</th>
            <th>Fecha Creaci√≥n</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.Name</strong></td>
                <td>
                    @if (item.ProductType != null)
                    {
                        <span class="badge bg-info">
                            <i class="bi bi-link-45deg"></i> @item.ProductType.Name
                        </span>
                    }
                    else
                    {
                        <span class="text-muted">
                            <i class="bi bi-dash-circle"></i> Manual
                        </span>
                    }
                </td>
                <td>
                    @if (item.Store != null)
                    {
                        <span class="badge bg-warning">@item.Store.Name</span>
                    }
                    else
                    {
                        <span class="badge bg-primary">Global</span>
                    }
                </td>
                <td>
                    @if (item.PriceListItems != null && item.PriceListItems.Any())
                    {
                        <span class="badge bg-secondary">@item.PriceListItems.Count productos</span>
                    }
                    else
                    {
                        <span class="text-muted">Sin productos</span>
                    }
                </td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Activa</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactiva</span>
                    }
                </td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="ManageItems" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Productos</a>
                    <a asp-action="BulkOperations" asp-route-id="@item.Id" class="btn btn-sm btn-dark">Operaciones</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay listas de precios registradas.
    </div>
}
