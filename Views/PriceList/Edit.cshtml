@model GrupoMad.Models.PriceList

@{
    ViewData["Title"] = "Editar Lista de Precios";
}

<h1>Editar Lista de Precios</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Nombre de la Lista</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StoreId" class="control-label">Tienda</label>
                <select asp-for="StoreId" class="form-control" asp-items="ViewBag.StoreId">
                    <option value="">-- Global (Todas las tiendas) --</option>
                </select>
                <span asp-validation-for="StoreId" class="text-danger"></span>
                <small class="form-text text-muted">
                    Deje vac√≠o para que sea una lista global
                </small>
            </div>

            <div class="form-group form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label">Activa</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">Ver Detalles</a>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
