@model GrupoMad.Models.PriceList

@{
    ViewData["Title"] = "Crear Lista de Precios";
}

<h1>Crear Lista de Precios</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Nombre de la Lista</label>
                <input asp-for="Name" class="form-control" placeholder="Ej: Lista Verano 2024" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StoreId" class="control-label">Tienda</label>
                <select asp-for="StoreId" class="form-control" asp-items="ViewBag.StoreId">
                    <option value="">-- Global (Todas las tiendas) --</option>
                </select>
                <span asp-validation-for="StoreId" class="text-danger"></span>
                <small class="form-text text-muted">
                    Deje vacío para crear una lista global, o seleccione una tienda específica
                </small>
            </div>

            <div class="form-group form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                <label asp-for="IsActive" class="form-check-label">Activa</label>
            </div>

            <div class="alert alert-info">
                <strong>Nota:</strong> Después de crear la lista, podrá agregar productos y definir sus precios.
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
