@model IEnumerable<GrupoMad.Models.Contact>

@{
    ViewData["Title"] = "Contactos";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold"><i class="bi bi-person-lines-fill text-primary"></i> Contactos</h2>
                    <p class="text-muted">Administra los contactos de tus empresas</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Crear Nuevo Contacto
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros de búsqueda -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Index" method="get" id="searchForm">
                        <div class="row g-3">
                            <div class="@(ViewBag.IsAdmin ? "col-md-6" : "col-md-10")">
                                <label for="searchTerm" class="form-label">
                                    <i class="bi bi-search"></i> Buscar
                                </label>
                                <input type="text"
                                       class="form-control"
                                       id="searchTerm"
                                       name="searchTerm"
                                       value="@ViewBag.SearchTerm"
                                       placeholder="Buscar por nombre, RFC, email, ciudad..." />
                            </div>
                            @if (ViewBag.IsAdmin)
                            {
                                <div class="col-md-4">
                                    <label for="companyId" class="form-label">
                                        <i class="bi bi-building"></i> Empresa
                                    </label>
                                    <select class="form-select"
                                            id="companyId"
                                            name="companyId"
                                            asp-items="ViewBag.Companies">
                                        <option value="">Todas las empresas</option>
                                    </select>
                                </div>
                            }
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100 me-2">
                                    <i class="bi bi-search"></i> Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Indicador de resultados -->
    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm) || (ViewBag.IsAdmin && ViewBag.CompanyId != null))
    {
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="alert alert-info d-flex align-items-center" role="alert">
                    <i class="bi bi-funnel me-2"></i>
                    <div>
                        Mostrando <strong>@Model.Count()</strong> contacto(s)
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <span>que coinciden con "<strong>@ViewBag.SearchTerm</strong>"</span>
                        }
                        @if (ViewBag.IsAdmin && ViewBag.CompanyId != null)
                        {
                            var selectedCompany = ((SelectList)ViewBag.Companies).FirstOrDefault(c => c.Value == ViewBag.CompanyId.ToString());
                            if (selectedCompany != null)
                            {
                                <span>en la empresa "<strong>@selectedCompany.Text</strong>"</span>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-person me-2"></i>Nombre
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-geo-alt me-2"></i>Ubicación
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-building me-2"></i>Empresa
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-mailbox me-2"></i>Direcciones de Envío
                                    </th>
                                    <th class="px-4 py-3 text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.Any() == true)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="px-4 py-3">
                                                <div>
                                                    <strong>@item.FirstName @item.LastName</strong>
                                                    @if (!string.IsNullOrEmpty(item.RFC))
                                                    {
                                                        <br /><small class="text-muted">RFC: @item.RFC</small>
                                                    }
                                                </div>
                                            </td>
                                            <td class="px-4 py-3">
                                                <small>
                                                    @item.City, @item.StateID.ToString()
                                                </small>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="badge bg-info bg-opacity-10 text-info">
                                                    @item.Company.Name
                                                </span>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="badge bg-secondary">
                                                    @item.ShippingAddresses.Count
                                                </span>
                                            </td>
                                            <td class="px-4 py-3 text-end">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ver Detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5">
                                            <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
                                            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm) || (ViewBag.IsAdmin && ViewBag.CompanyId != null))
                                            {
                                                <p class="text-muted">No se encontraron contactos con los filtros aplicados.</p>
                                                <a asp-action="Index" class="btn btn-outline-secondary mt-2">
                                                    <i class="bi bi-arrow-counterclockwise"></i> Limpiar Filtros
                                                </a>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No hay contactos registrados. ¡Crea uno nuevo!</p>
                                                <a asp-action="Create" class="btn btn-primary mt-2">
                                                    <i class="bi bi-plus-circle"></i> Crear Primer Contacto
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Select2 CSS y JS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // Inicializar Select2 solo si el elemento existe (solo para admins)
            if ($('#companyId').length > 0) {
                $('#companyId').select2({
                    theme: 'bootstrap-5',
                    placeholder: 'Seleccione una empresa...',
                    allowClear: true,
                    width: '100%'
                });

                // Auto-submit cuando cambia la empresa
                $('#companyId').on('change', function() {
                    $('#searchForm').submit();
                });
            }

            // Búsqueda en tiempo real (opcional - con delay)
            let searchTimeout;
            $('#searchTerm').on('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(function() {
                    // Descomentar la siguiente línea si quieres búsqueda en tiempo real
                    // $('#searchForm').submit();
                }, 500);
            });
        });
    </script>
}
