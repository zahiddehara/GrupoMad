@model GrupoMad.Models.Contact

@{
    ViewData["Title"] = "Detalles del Contacto";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Contactos</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Detalles</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-person-badge"></i> Información del Contacto</h4>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light btn-sm">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Empresa:</div>
                        <div class="col-md-9">
                            <span class="badge bg-info bg-opacity-10 text-info">@Model.Company.Name</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Nombre Completo:</div>
                        <div class="col-md-9">@Model.FirstName @Model.LastName</div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.RFC))
                    {
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">RFC:</div>
                            <div class="col-md-9">@Model.RFC</div>
                        </div>
                    }

                    <hr>
                    <h5 class="mb-3"><i class="bi bi-geo-alt"></i> Dirección Principal</h5>

                    <div class="row mb-2">
                        <div class="col-md-3 fw-bold">Calle:</div>
                        <div class="col-md-9">@Model.Street @Model.ExteriorNumber@(Model.InteriorNumber != null ? $" Int. {Model.InteriorNumber}" : "")</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-3 fw-bold">Colonia:</div>
                        <div class="col-md-9">@Model.Neighborhood</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-3 fw-bold">Ciudad:</div>
                        <div class="col-md-9">@Model.City</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-md-3 fw-bold">Estado:</div>
                        <div class="col-md-9">@Model.StateID.ToString()</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold">Código Postal:</div>
                        <div class="col-md-9">@Model.PostalCode</div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-3 fw-bold">Creado:</div>
                        <div class="col-md-9">
                            <small class="text-muted">@Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                    </div>

                    @if (Model.UpdatedAt != null)
                    {
                        <div class="row">
                            <div class="col-md-3 fw-bold">Última Actualización:</div>
                            <div class="col-md-9">
                                <small class="text-muted">@Model.UpdatedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Shipping Addresses Section -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-mailbox"></i> Direcciones de Envío</h4>
                    <a asp-action="CreateShippingAddress" asp-route-contactId="@Model.Id" class="btn btn-light btn-sm">
                        <i class="bi bi-plus-circle"></i> Agregar Dirección
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (Model.ShippingAddresses?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">Destinatario</th>
                                        <th class="px-4 py-3">Dirección</th>
                                        <th class="px-4 py-3">Referencia</th>
                                        <th class="px-4 py-3 text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var shipping in Model.ShippingAddresses)
                                    {
                                        <tr>
                                            <td class="px-4 py-3">
                                                <strong>@shipping.FirstName @shipping.LastName</strong>
                                                @if (!string.IsNullOrEmpty(shipping.RFC))
                                                {
                                                    <br /><small class="text-muted">RFC: @shipping.RFC</small>
                                                }
                                            </td>
                                            <td class="px-4 py-3">
                                                <small>
                                                    @shipping.Street @shipping.ExteriorNumber@(shipping.InteriorNumber != null ? $" Int. {shipping.InteriorNumber}" : "")<br />
                                                    @shipping.Neighborhood, @shipping.City<br />
                                                    @shipping.StateID.ToString() - C.P. @shipping.PostalCode
                                                </small>
                                            </td>
                                            <td class="px-4 py-3">
                                                @if (!string.IsNullOrEmpty(shipping.DeliveryReference))
                                                {
                                                    <small>@shipping.DeliveryReference</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">Sin referencia</small>
                                                }
                                            </td>
                                            <td class="px-4 py-3 text-end">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="EditShippingAddress" asp-route-id="@shipping.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="DeleteShippingAddress" asp-route-id="@shipping.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
                            <p class="text-muted">No hay direcciones de envío registradas para este contacto.</p>
                            <a asp-action="CreateShippingAddress" asp-route-contactId="@Model.Id" class="btn btn-secondary mt-2">
                                <i class="bi bi-plus-circle"></i> Agregar Primera Dirección
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                <i class="bi bi-trash"></i> Eliminar Contacto
            </a>
        </div>
    </div>
</div>
