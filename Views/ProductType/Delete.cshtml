@model GrupoMad.Models.ProductType

@{
    ViewData["Title"] = "Eliminar Tipo de Producto";
}

<div class="container mt-4">
    <h1 class="text-danger">@ViewData["Title"]</h1>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Confirmar Eliminación</h4>
        <p>¿Está seguro de que desea eliminar este tipo de producto?</p>
        <hr>
        <p class="mb-0">Esta acción no se puede deshacer.</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">@Model.Name</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Descripción:</dt>
                <dd class="col-sm-8">@(Model.Description ?? "-")</dd>

                <dt class="col-sm-4">Tipo de Precio:</dt>
                <dd class="col-sm-8">
                    @switch (Model.PricingType)
                    {
                        case GrupoMad.Models.PricingType.PerSquareMeter:
                            <span class="badge bg-info">Por Metro Cuadrado (m²)</span>
                            break;
                        case GrupoMad.Models.PricingType.PerUnit:
                            <span class="badge bg-success">Por Unidad</span>
                            break;
                        case GrupoMad.Models.PricingType.PerRangeLength:
                            <span class="badge bg-warning">Por Rango de Largo</span>
                            break;
                        case GrupoMad.Models.PricingType.PerRangeDimensions:
                            <span class="badge bg-warning">Por Rango de Dimensiones (Ancho y Alto)</span>
                            break;
                        case GrupoMad.Models.PricingType.PerLinearMeter:
                            <span class="badge bg-primary">Por Metro Lineal (m)</span>
                            break;
                    }
                </dd>

                <dt class="col-sm-4">Estado:</dt>
                <dd class="col-sm-8">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </dd>

                <dt class="col-sm-4">Productos Asociados:</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-secondary">@Model.Products.Count</span>
                </dd>

                <dt class="col-sm-4">Listas de Precios Asociadas:</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-warning text-dark">@ViewBag.PriceListCount</span>
                </dd>

                <dt class="col-sm-4">Fecha de Creación:</dt>
                <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>

            @if (Model.Products.Any())
            {
                <div class="alert alert-danger mt-3" role="alert">
                    <h5 class="alert-heading">No se puede eliminar</h5>
                    <p>Este tipo de producto tiene <strong>@Model.Products.Count producto(s)</strong> asociado(s).</p>
                    <hr>
                    <p class="mb-0">Debe eliminar o reasignar los productos antes de eliminar este tipo de producto.</p>
                </div>

                <div class="mt-3">
                    <h5>Productos asociados:</h5>
                    <ul class="list-group">
                        @foreach (var product in Model.Products.Take(5))
                        {
                            <li class="list-group-item">
                                <strong>@product.Name</strong> (SKU: @product.SKU)
                            </li>
                        }
                    </ul>
                    @if (Model.Products.Count > 5)
                    {
                        <small class="text-muted">... y @(Model.Products.Count - 5) producto(s) más</small>
                    }
                </div>
            }
            else if (ViewBag.PriceListCount > 0)
            {
                <div class="alert alert-warning mt-3" role="alert">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-triangle"></i> Advertencia: Eliminación en Cascada
                    </h5>
                    <p>Este tipo de producto tiene <strong>@ViewBag.PriceListCount lista(s) de precios</strong> asociada(s).</p>
                    <hr>
                    <p class="mb-0">
                        <strong>Al eliminar este tipo de producto, también se eliminarán todas las listas de precios asociadas,</strong>
                        incluyendo todos sus items y descuentos. Esta acción no se puede deshacer.
                    </p>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        @if (!Model.Products.Any())
        {
            <form asp-action="Delete" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmar Eliminación
                </button>
            </form>
        }
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Listado
        </a>
        @if (!Model.Products.Any())
        {
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                <i class="bi bi-eye"></i> Ver Detalles
            </a>
        }
    </div>
</div>
