@model GrupoMad.Controllers.ProductTypeEditViewModel

@{
    ViewData["Title"] = "Editar Tipo de Producto";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Nombre *</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">Descripción</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PricingType" class="control-label">Tipo de Precio *</label>
                    <select asp-for="PricingType" class="form-control">
                        <option value="">-- Seleccione un tipo de precio --</option>
                        <option value="@GrupoMad.Models.PricingType.PerSquareMeter">Por Metro Cuadrado (m²)</option>
                        <option value="@GrupoMad.Models.PricingType.PerUnit">Por Unidad</option>
                        <option value="@GrupoMad.Models.PricingType.PerRangeLength">Por Rango de Largo</option>
                        <option value="@GrupoMad.Models.PricingType.PerRangeDimensions">Por Rango de Dimensiones (Ancho y Alto)</option>
                        <option value="@GrupoMad.Models.PricingType.PerLinearMeter">Por Metro Lineal (m)</option>
                    </select>
                    <span asp-validation-for="PricingType" class="text-danger"></span>
                    <small class="form-text text-muted">
                        Seleccione cómo se calcula el precio para este tipo de producto
                    </small>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label">
                        Activo
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="HasVariants" class="form-check-input" type="checkbox" id="hasVariantsCheckbox" />
                    <label asp-for="HasVariants" class="form-check-label">
                        Tiene Variantes
                    </label>
                    <small class="form-text text-muted d-block">Marcar si este tipo requiere variantes (ej: Panel con 3/4/5 vías)</small>
                </div>

                <div id="variantsSection" style="display: @(Model.HasVariants ? "block" : "none");" class="mb-3">
                    <label class="control-label">Variantes</label>
                    <div id="variantsList">
                        @for (int i = 0; i < Model.Variants.Count; i++)
                        {
                            <div class="input-group mb-2 variant-row" data-index="@i">
                                <input type="text" name="Variants[@i].Name" value="@Model.Variants[i].Name" class="form-control" placeholder="Nombre de variante" required />
                                <input type="hidden" name="Variants[@i].Id" value="@Model.Variants[i].Id" />
                                <input type="hidden" name="Variants[@i].DisplayOrder" value="@Model.Variants[i].DisplayOrder" />
                                <input type="hidden" name="Variants[@i].IsActive" value="@Model.Variants[i].IsActive.ToString().ToLower()" />
                                <input type="hidden" name="Variants[@i].IsDeleted" value="false" class="is-deleted-field" />
                                <button type="button" class="btn btn-outline-danger remove-variant-btn">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        }
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary mt-2" id="addVariantBtn">
                        <i class="bi bi-plus-circle"></i> Agregar Variante
                    </button>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="HasHeadingStyles" class="form-check-input" type="checkbox" id="hasHeadingStylesCheckbox" />
                    <label asp-for="HasHeadingStyles" class="form-check-label">
                        Tiene Estilos de Cabecera
                    </label>
                    <small class="form-text text-muted d-block">Marcar si este tipo requiere estilos de cabecera (ej: Cortinas con plisado, ojales, trabillas)</small>
                </div>

                <div id="headingStylesSection" style="display: @(Model.HasHeadingStyles ? "block" : "none");" class="mb-3">
                    <label class="control-label">Estilos de Cabecera</label>
                    <div id="headingStylesList">
                        @for (int i = 0; i < Model.HeadingStyles.Count; i++)
                        {
                            <div class="input-group mb-2 heading-style-row" data-index="@i">
                                <input type="text" name="HeadingStyles[@i].Name" value="@Model.HeadingStyles[i].Name" class="form-control" placeholder="Nombre de estilo" required />
                                <input type="hidden" name="HeadingStyles[@i].Id" value="@Model.HeadingStyles[i].Id" />
                                <input type="hidden" name="HeadingStyles[@i].DisplayOrder" value="@Model.HeadingStyles[i].DisplayOrder" />
                                <input type="hidden" name="HeadingStyles[@i].IsActive" value="@Model.HeadingStyles[i].IsActive.ToString().ToLower()" />
                                <input type="hidden" name="HeadingStyles[@i].IsDeleted" value="false" class="is-deleted-field-heading" />
                                <button type="button" class="btn btn-outline-danger remove-heading-style-btn">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        }
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary mt-2" id="addHeadingStyleBtn">
                        <i class="bi bi-plus-circle"></i> Agregar Estilo de Cabecera
                    </button>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver al Listado
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="bi bi-eye"></i> Ver Detalles
                    </a>
                </div>
            </form>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Información sobre Tipos de Precio</h5>
                </div>
                <div class="card-body">
                    <dl>
                        <dt>Por Metro Cuadrado (m²)</dt>
                        <dd>El precio se calcula multiplicando por el área en metros cuadrados. Ideal para pisos, azulejos, alfombras.</dd>

                        <dt>Por Unidad</dt>
                        <dd>El precio se aplica por cada unidad del producto. Ideal para muebles, accesorios, artículos individuales.</dd>

                        <dt>Por Rango de Largo</dt>
                        <dd>El precio varía según rangos de largo. Ideal para productos vendidos por longitud con descuentos por volumen.</dd>

                        <dt>Por Rango de Dimensiones (Ancho y Alto)</dt>
                        <dd>El precio varía según rangos de ancho y alto combinados. Ideal para productos bidimensionales como vidrios, espejos o paneles.</dd>

                        <dt>Por Metro Lineal (m)</dt>
                        <dd>El precio se calcula por metro lineal. Ideal para molduras, zócalos, cortinas, perfiles.</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        let variantIndex = @Model.Variants.Count;
        let headingStyleIndex = @Model.HeadingStyles.Count;

        document.getElementById('hasVariantsCheckbox').addEventListener('change', function() {
            const variantsSection = document.getElementById('variantsSection');
            variantsSection.style.display = this.checked ? 'block' : 'none';
        });

        document.getElementById('addVariantBtn').addEventListener('click', function() {
            const variantsList = document.getElementById('variantsList');
            const variantHtml = `
                <div class="input-group mb-2 variant-row" data-index="${variantIndex}">
                    <input type="text" name="Variants[${variantIndex}].Name" class="form-control" placeholder="Nombre de variante (ej: 3 vías)" required />
                    <input type="hidden" name="Variants[${variantIndex}].Id" value="0" />
                    <input type="hidden" name="Variants[${variantIndex}].DisplayOrder" value="${variantIndex + 1}" />
                    <input type="hidden" name="Variants[${variantIndex}].IsActive" value="true" />
                    <input type="hidden" name="Variants[${variantIndex}].IsDeleted" value="false" class="is-deleted-field" />
                    <button type="button" class="btn btn-outline-danger remove-variant-btn">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            `;
            variantsList.insertAdjacentHTML('beforeend', variantHtml);
            variantIndex++;
        });

        document.getElementById('variantsList').addEventListener('click', function(e) {
            if (e.target.closest('.remove-variant-btn')) {
                const row = e.target.closest('.variant-row');
                const isDeletedField = row.querySelector('.is-deleted-field');
                isDeletedField.value = 'true';
                row.style.display = 'none';
            }
        });

        document.getElementById('hasHeadingStylesCheckbox').addEventListener('change', function() {
            const headingStylesSection = document.getElementById('headingStylesSection');
            headingStylesSection.style.display = this.checked ? 'block' : 'none';
        });

        document.getElementById('addHeadingStyleBtn').addEventListener('click', function() {
            const headingStylesList = document.getElementById('headingStylesList');
            const headingStyleHtml = `
                <div class="input-group mb-2 heading-style-row" data-index="${headingStyleIndex}">
                    <input type="text" name="HeadingStyles[${headingStyleIndex}].Name" class="form-control" placeholder="Nombre de estilo (ej: Plisado, Ojales, Trabillas)" required />
                    <input type="hidden" name="HeadingStyles[${headingStyleIndex}].Id" value="0" />
                    <input type="hidden" name="HeadingStyles[${headingStyleIndex}].DisplayOrder" value="${headingStyleIndex + 1}" />
                    <input type="hidden" name="HeadingStyles[${headingStyleIndex}].IsActive" value="true" />
                    <input type="hidden" name="HeadingStyles[${headingStyleIndex}].IsDeleted" value="false" class="is-deleted-field-heading" />
                    <button type="button" class="btn btn-outline-danger remove-heading-style-btn">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            `;
            headingStylesList.insertAdjacentHTML('beforeend', headingStyleHtml);
            headingStyleIndex++;
        });

        document.getElementById('headingStylesList').addEventListener('click', function(e) {
            if (e.target.closest('.remove-heading-style-btn')) {
                const row = e.target.closest('.heading-style-row');
                const isDeletedField = row.querySelector('.is-deleted-field-heading');
                isDeletedField.value = 'true';
                row.style.display = 'none';
            }
        });
    </script>
}
