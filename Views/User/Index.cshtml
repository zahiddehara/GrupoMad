@model IEnumerable<GrupoMad.Models.User>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="bi bi-people-fill text-primary"></i> Usuarios</h1>
                    <p class="text-muted">Administra los usuarios del sistema</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Crear Nuevo Usuario
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-person me-2"></i>Usuario
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-envelope me-2"></i>Email
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-shield-check me-2"></i>Rol
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-shop me-2"></i>Tienda
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-toggle-on me-2"></i>Estado
                                    </th>
                                    <th class="px-4 py-3 text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.Any() == true)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr class="@(!item.IsActive ? "table-secondary" : "")">
                                            <td class="px-4 py-3">
                                                <div>
                                                    <strong>@item.FirstName @item.LastName</strong>
                                                    @if (!string.IsNullOrEmpty(item.PhoneNumber))
                                                    {
                                                        <br /><small class="text-muted"><i class="bi bi-telephone"></i> @item.PhoneNumber</small>
                                                    }
                                                </div>
                                            </td>
                                            <td class="px-4 py-3">
                                                <small>@item.Email</small>
                                            </td>
                                            <td class="px-4 py-3">
                                                @if (item.Role == GrupoMad.Models.UserRole.Administrator)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-shield-fill-exclamation"></i> Administrador
                                                    </span>
                                                }
                                                else if (item.Role == GrupoMad.Models.UserRole.SalesManager)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-graph-up"></i> Gerente de Ventas
                                                    </span>
                                                }
                                                else if (item.Role == GrupoMad.Models.UserRole.StoreManager)
                                                {
                                                    <span class="badge bg-info">
                                                        <i class="bi bi-shop"></i> Gerente de Tienda
                                                    </span>
                                                }
                                                else if (item.Role == GrupoMad.Models.UserRole.Salesperson)
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="bi bi-person-badge"></i> Vendedor
                                                    </span>
                                                }
                                            </td>
                                            <td class="px-4 py-3">
                                                @if (item.Store != null)
                                                {
                                                    <small>
                                                        <strong>@item.Store.Name</strong><br />
                                                        <span class="text-muted">@item.Store.Company?.Name</span>
                                                    </small>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-dark">Todas las tiendas</span>
                                                }
                                            </td>
                                            <td class="px-4 py-3">
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactivo</span>
                                                }
                                            </td>
                                            <td class="px-4 py-3 text-end">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ver Detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-5">
                                            <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
                                            <p class="text-muted">No hay usuarios registrados. Â¡Crea uno nuevo!</p>
                                            <a asp-action="Create" class="btn btn-primary mt-2">
                                                <i class="bi bi-plus-circle"></i> Crear Primer Usuario
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
