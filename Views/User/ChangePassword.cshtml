@model GrupoMad.Models.User

@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Usuarios</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.FirstName @Model.LastName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Cambiar Contraseña</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-key"></i> Cambiar Contraseña</h4>
                    <small>Usuario: @Model.FirstName @Model.LastName (@Model.Email)</small>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ChangePassword">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }

                        <input type="hidden" asp-for="Id" />

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            La nueva contraseña debe cumplir con los siguientes requisitos:
                            <ul class="mb-0 mt-2">
                                <li>Mínimo 8 caracteres</li>
                                <li>Al menos una letra mayúscula</li>
                                <li>Al menos una letra minúscula</li>
                                <li>Al menos un número</li>
                            </ul>
                        </div>

                        <div class="mb-3">
                            <label for="NewPassword" class="form-label fw-bold">Nueva Contraseña</label>
                            <input type="password" name="NewPassword" id="NewPassword" class="form-control form-control-lg" placeholder="Ingresa la nueva contraseña" required />
                            <span class="text-danger small d-block">@ViewData.ModelState["NewPassword"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                        </div>

                        <div class="mb-4">
                            <label for="ConfirmPassword" class="form-label fw-bold">Confirmar Contraseña</label>
                            <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirma la nueva contraseña" required />
                            <span class="text-danger small d-block">@ViewData.ModelState["ConfirmPassword"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
                        </div>

                        <hr class="my-4">

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-5">
                                <i class="bi bi-check-circle"></i> Cambiar Contraseña
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Validar que las contraseñas coincidan en tiempo real
        document.getElementById('ConfirmPassword').addEventListener('input', function() {
            const newPassword = document.getElementById('NewPassword').value;
            const confirmPassword = this.value;

            if (newPassword !== confirmPassword) {
                this.setCustomValidity('Las contraseñas no coinciden');
            } else {
                this.setCustomValidity('');
            }
        });
    </script>
}
