@model GrupoMad.Models.Store

@{
    ViewData["Title"] = "Editar Tienda";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Tiendas</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Editar</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Tienda</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold">
                                <i class="bi bi-shop-window text-primary"></i> Nombre de la Tienda
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Ej: Tienda Centro" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CompanyId" class="form-label fw-bold">
                                <i class="bi bi-building text-primary"></i> Empresa
                            </label>
                            <select asp-for="CompanyId" class="form-select form-select-lg" asp-items="ViewBag.CompanyId">
                            </select>
                            <span asp-validation-for="CompanyId" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
