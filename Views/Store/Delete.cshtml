@model GrupoMad.Models.Store

@{
    ViewData["Title"] = "Eliminar Tienda";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Tiendas</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Eliminar</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Eliminar Tienda</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                        <div>
                            <strong>¿Estás seguro de que quieres eliminar esta tienda?</strong>
                            <p class="mb-0 small">Esta acción no se puede deshacer.</p>
                        </div>
                    </div>

                    <div class="mb-4 mt-4">
                        <div class="p-4 bg-light rounded-3 border">
                            <div class="row mb-3">
                                <div class="col-12">
                                    <label class="text-muted small mb-1">
                                        <i class="bi bi-shop-window text-primary"></i> Nombre de la Tienda
                                    </label>
                                    <h5 class="fw-bold mb-0">@Html.DisplayFor(model => model.Name)</h5>
                                </div>
                            </div>

                            <hr class="my-3">

                            <div class="row">
                                <div class="col-12">
                                    <label class="text-muted small mb-1">
                                        <i class="bi bi-building text-primary"></i> Empresa
                                    </label>
                                    <p class="mb-0">
                                        <span class="badge bg-info fs-6">
                                            @Html.DisplayFor(model => model.Company.Id)
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <hr class="my-4">

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-5">
                                <i class="bi bi-trash"></i> Eliminar Definitivamente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
