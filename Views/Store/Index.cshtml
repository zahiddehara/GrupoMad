@model IEnumerable<GrupoMad.Models.Store>

@{
    ViewData["Title"] = "Tiendas";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold"><i class="bi bi-shop text-primary"></i> Tiendas</h2>
                    <p class="text-muted">Administra las tiendas de tu empresa</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Crear Nueva Tienda
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-shop-window me-2"></i>Nombre
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-building me-2"></i>Empresa
                                    </th>
                                    <th class="px-4 py-3 text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.Any() == true)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="px-4 py-3">
                                                <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="badge bg-info bg-opacity-10 text-info">
                                                    @Html.DisplayFor(modelItem => item.Company.Name)
                                                </span>
                                            </td>
                                            <td class="px-4 py-3 text-end">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ver Detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-5">
                                            <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
                                            <p class="text-muted">No hay tiendas registradas. Â¡Crea una nueva!</p>
                                            <a asp-action="Create" class="btn btn-primary mt-2">
                                                <i class="bi bi-plus-circle"></i> Crear Primera Tienda
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
