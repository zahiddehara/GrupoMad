@model GrupoMad.Models.Store

@{
    ViewData["Title"] = "Detalles de Tienda";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Tiendas</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Detalles</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> Detalles de la Tienda</h4>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <div class="p-4 bg-light rounded-3 border">
                            <div class="row mb-3">
                                <div class="col-12">
                                    <label class="text-muted small mb-1">
                                        <i class="bi bi-shop-window text-primary"></i> Nombre de la Tienda
                                    </label>
                                    <h5 class="fw-bold mb-0">@Html.DisplayFor(model => model.Name)</h5>
                                </div>
                            </div>

                            <hr class="my-3">

                            <div class="row">
                                <div class="col-12">
                                    <label class="text-muted small mb-1">
                                        <i class="bi bi-building text-primary"></i> Empresa
                                    </label>
                                    <p class="mb-0">
                                        <span class="badge bg-info fs-6">
                                            @Html.DisplayFor(model => model.Company.Name)
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left"></i> Volver al Listado
                        </a>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-outline-danger btn-lg">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
