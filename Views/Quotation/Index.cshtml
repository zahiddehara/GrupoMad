@model IEnumerable<GrupoMad.Models.Quotation>

@{
    ViewData["Title"] = "Cotizaciones";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold"><i class="bi bi-file-earmark-text text-primary"></i> Cotizaciones</h2>
                    <p class="text-muted">Administra las cotizaciones de tu empresa</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Crear Nueva Cotización
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Index" method="get" id="filterForm" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label"><i class="bi bi-funnel"></i> Filtrar por Estado</label>
                            <select name="status" class="form-select">
                                <option value="">Todos los estados</option>
                                <option value="@((int)GrupoMad.Models.QuotationStatus.Draft)" selected="@(ViewBag.StatusFilter == GrupoMad.Models.QuotationStatus.Draft ? "selected" : null)">Borrador</option>
                                <option value="@((int)GrupoMad.Models.QuotationStatus.Sent)" selected="@(ViewBag.StatusFilter == GrupoMad.Models.QuotationStatus.Sent ? "selected" : null)">Enviada</option>
                                <option value="@((int)GrupoMad.Models.QuotationStatus.Accepted)" selected="@(ViewBag.StatusFilter == GrupoMad.Models.QuotationStatus.Accepted ? "selected" : null)">Aceptada</option>
                                <option value="@((int)GrupoMad.Models.QuotationStatus.Rejected)" selected="@(ViewBag.StatusFilter == GrupoMad.Models.QuotationStatus.Rejected ? "selected" : null)">Rechazada</option>
                                <option value="@((int)GrupoMad.Models.QuotationStatus.Expired)" selected="@(ViewBag.StatusFilter == GrupoMad.Models.QuotationStatus.Expired ? "selected" : null)">Expirada</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label"><i class="bi bi-person"></i> Filtrar por Contacto</label>
                            <select name="contactId" id="contactFilter" class="form-select" asp-items="ViewBag.Contacts">
                                <option value="">Todos los contactos</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label"><i class="bi bi-calendar"></i> Desde</label>
                            <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label"><i class="bi bi-calendar"></i> Hasta</label>
                            <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate" />
                        </div>
                        <div class="col-md-1 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100" title="Buscar">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                        @if (!string.IsNullOrEmpty(ViewBag.FromDate) || !string.IsNullOrEmpty(ViewBag.ToDate) || ViewBag.StatusFilter != null || ViewBag.ContactIdFilter != null)
                        {
                            <div class="col-12">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-x-circle"></i> Limpiar Filtros
                                </a>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Indicador de filtros activos -->
    @if (!string.IsNullOrEmpty(ViewBag.FromDate) || !string.IsNullOrEmpty(ViewBag.ToDate) || ViewBag.StatusFilter != null || ViewBag.ContactIdFilter != null)
    {
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="alert alert-info d-flex align-items-center" role="alert">
                    <i class="bi bi-funnel me-2"></i>
                    <div>
                        Mostrando <strong>@Model.Count()</strong> cotización(es)
                        @if (ViewBag.StatusFilter != null)
                        {
                            var statusName = ViewBag.StatusFilter == GrupoMad.Models.QuotationStatus.Draft ? "Borrador" :
                                           ViewBag.StatusFilter == GrupoMad.Models.QuotationStatus.Sent ? "Enviada" :
                                           ViewBag.StatusFilter == GrupoMad.Models.QuotationStatus.Accepted ? "Aceptada" :
                                           ViewBag.StatusFilter == GrupoMad.Models.QuotationStatus.Rejected ? "Rechazada" : "Expirada";
                            <span>con estado "<strong>@statusName</strong>"</span>
                        }
                        @if (ViewBag.ContactIdFilter != null)
                        {
                            var selectedContact = ((SelectList)ViewBag.Contacts).FirstOrDefault(c => c.Value == ViewBag.ContactIdFilter.ToString());
                            if (selectedContact != null)
                            {
                                <span>del contacto "<strong>@selectedContact.Text</strong>"</span>
                            }
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.FromDate) || !string.IsNullOrEmpty(ViewBag.ToDate))
                        {
                            <span>
                                @if (!string.IsNullOrEmpty(ViewBag.FromDate) && !string.IsNullOrEmpty(ViewBag.ToDate))
                                {
                                    <text>desde <strong>@DateTime.Parse(ViewBag.FromDate).ToString("dd/MM/yyyy")</strong> hasta <strong>@DateTime.Parse(ViewBag.ToDate).ToString("dd/MM/yyyy")</strong></text>
                                }
                                else if (!string.IsNullOrEmpty(ViewBag.FromDate))
                                {
                                    <text>desde <strong>@DateTime.Parse(ViewBag.FromDate).ToString("dd/MM/yyyy")</strong></text>
                                }
                                else
                                {
                                    <text>hasta <strong>@DateTime.Parse(ViewBag.ToDate).ToString("dd/MM/yyyy")</strong></text>
                                }
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-hash me-2"></i>Número
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-calendar me-2"></i>Fecha
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-person me-2"></i>Cliente
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-shop me-2"></i>Tienda
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-currency-dollar me-2"></i>Total
                                    </th>
                                    <th class="px-4 py-3">
                                        <i class="bi bi-info-circle me-2"></i>Estado
                                    </th>
                                    <th class="px-4 py-3 text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.Any() == true)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="px-4 py-3">
                                                <strong>@item.QuotationNumber</strong>
                                            </td>
                                            <td class="px-4 py-3">
                                                <small>@item.QuotationDate.ToLocalTime().ToString("dd/MM/yyyy")</small><br />
                                                <small class="text-muted">Válida hasta: @item.ValidUntil.ToLocalTime().ToString("dd/MM/yyyy")</small>
                                            </td>
                                            <td class="px-4 py-3">
                                                <div>
                                                    <strong>@item.Contact?.FirstName @item.Contact?.LastName</strong>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3">
                                                <small>
                                                    @item.Store?.Name<br />
                                                    <span class="text-muted">@item.Store?.Company?.Name</span>
                                                </small>
                                            </td>
                                            <td class="px-4 py-3">
                                                <strong class="text-success">@item.GetTotal().ToString("C")</strong><br />
                                                <small class="text-muted">@item.Items.Count item(s)</small>
                                            </td>
                                            <td class="px-4 py-3">
                                                @if (item.Status == GrupoMad.Models.QuotationStatus.Draft)
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="bi bi-pencil"></i> Borrador
                                                    </span>
                                                }
                                                else if (item.Status == GrupoMad.Models.QuotationStatus.Sent)
                                                {
                                                    @if (item.IsExpired())
                                                    {
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-clock-history"></i> Expirada
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-info">
                                                            <i class="bi bi-send"></i> Enviada
                                                        </span>
                                                    }
                                                }
                                                else if (item.Status == GrupoMad.Models.QuotationStatus.Accepted)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Aceptada
                                                    </span>
                                                }
                                                else if (item.Status == GrupoMad.Models.QuotationStatus.Rejected)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-x-circle"></i> Rechazada
                                                    </span>
                                                }
                                                else if (item.Status == GrupoMad.Models.QuotationStatus.Expired)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-clock-history"></i> Expirada
                                                    </span>
                                                }
                                            </td>
                                            <td class="px-4 py-3 text-end">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ver Detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    @if (item.CanBeEdited())
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                    }
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-5">
                                            <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
                                            @if (!string.IsNullOrEmpty(ViewBag.FromDate) || !string.IsNullOrEmpty(ViewBag.ToDate) || ViewBag.StatusFilter != null || ViewBag.ContactIdFilter != null)
                                            {
                                                <p class="text-muted">No se encontraron cotizaciones con los filtros aplicados.</p>
                                                <a asp-action="Index" class="btn btn-outline-secondary mt-2">
                                                    <i class="bi bi-arrow-counterclockwise"></i> Limpiar Filtros
                                                </a>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No hay cotizaciones registradas. ¡Crea una nueva!</p>
                                                <a asp-action="Create" class="btn btn-primary mt-2">
                                                    <i class="bi bi-plus-circle"></i> Crear Primera Cotización
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Select2 CSS y JS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // Inicializar Select2 para el filtro de contacto
            $('#contactFilter').select2({
                theme: 'bootstrap-5',
                placeholder: 'Buscar contacto...',
                allowClear: true,
                width: '100%'
            });

            // Auto-submit cuando cambia el contacto (opcional)
            $('#contactFilter').on('change', function() {
                // Descomentar la siguiente línea si quieres auto-submit
                // $('#filterForm').submit();
            });

            // Validación de fechas
            const fromDateInput = document.querySelector('input[name="fromDate"]');
            const toDateInput = document.querySelector('input[name="toDate"]');

            if (fromDateInput && toDateInput) {
                // Validar que "hasta" no sea menor que "desde"
                toDateInput.addEventListener('change', function() {
                    if (fromDateInput.value && toDateInput.value) {
                        if (new Date(toDateInput.value) < new Date(fromDateInput.value)) {
                            alert('La fecha "Hasta" no puede ser menor que la fecha "Desde"');
                            toDateInput.value = '';
                        }
                    }
                });

                fromDateInput.addEventListener('change', function() {
                    if (fromDateInput.value && toDateInput.value) {
                        if (new Date(toDateInput.value) < new Date(fromDateInput.value)) {
                            alert('La fecha "Hasta" no puede ser menor que la fecha "Desde"');
                            toDateInput.value = '';
                        }
                    }
                });
            }
        });
    </script>
}
