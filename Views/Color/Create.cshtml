@model GrupoMad.Models.Color

@{
    ViewData["Title"] = "Crear Color";
}

<h1>Crear Nuevo Color</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Code" class="control-label">Código</label>
                <input asp-for="Code" class="form-control" placeholder="Ej: BG-001, RAL-9016" />
                <span asp-validation-for="Code" class="text-danger"></span>
                <small class="form-text text-muted">
                    Código único del color (puede ser Pantone, RAL, o código interno)
                </small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" placeholder="Ej: Beige, Gris Claro" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                <label asp-for="IsActive" class="form-check-label">Activo</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Información sobre Colores</h5>
            </div>
            <div class="card-body">
                <h6>Código del Color:</h6>
                <p class="small">
                    El código debe ser único y puede seguir estándares como:
                </p>
                <ul class="small">
                    <li><strong>RAL:</strong> Sistema europeo (ej: RAL-9016 para blanco)</li>
                    <li><strong>Pantone:</strong> Sistema internacional (ej: PANTONE-123C)</li>
                    <li><strong>Código interno:</strong> Tu propio sistema (ej: BG-001)</li>
                </ul>

                <h6 class="mt-3">Nombre del Color:</h6>
                <p class="small">
                    Usa nombres descriptivos que tus clientes puedan entender fácilmente:
                    Beige, Gris Claro, Negro Mate, Blanco Brillante, etc.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
