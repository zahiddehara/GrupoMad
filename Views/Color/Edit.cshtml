@model GrupoMad.Models.Color

@{
    ViewData["Title"] = "Editar Color";
}

<h1>Editar Color</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Code" class="control-label">Código</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label">Activo</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Información del Color</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Creado:</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                    @if (Model.UpdatedAt.HasValue)
                    {
                        <dt class="col-sm-4">Última Actualización:</dt>
                        <dd class="col-sm-8">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    }

                    <dt class="col-sm-4">Productos Usando Este Color:</dt>
                    <dd class="col-sm-8">
                        @if (Model.ProductColors != null && Model.ProductColors.Any())
                        {
                            <span class="badge bg-info">@Model.ProductColors.Count producto(s)</span>
                        }
                        else
                        {
                            <span class="text-muted">Ninguno</span>
                        }
                    </dd>
                </dl>

                @if (Model.ProductColors != null && Model.ProductColors.Any())
                {
                    <div class="alert alert-warning small mt-3">
                        <strong>Atención:</strong> Este color está siendo usado por productos.
                        Los cambios afectarán a todas las variantes que usen este color.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
